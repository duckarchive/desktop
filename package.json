{
  "name": "@duckarchive/wiki-manager",
  "version": "0.0.1",
  "description": "Wikisource file uploader desktop application",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "page:edit": "pnpm build && dotenv -e .env -- node dist/editPage.js",
    "page:delete": "pnpm build && dotenv -e .env -- node dist/deletePage.js",
    "file:publish": "pnpm build && dotenv -e .env -- node dist/publishFile.js",
    "build": "rm -rf dist && pnpm run build:renderer && tsc",
    "build:electron": "pnpm build && pnpm build:renderer",
    "build:renderer": "webpack --mode=production",
    "build:renderer:dev": "webpack --mode=development",
    "start": "node dist/index.js",
    "electron": "pnpm build:electron && dotenv -e .env -- electron .",
    "electron:dev": "pnpm build && pnpm build:renderer:dev && dotenv -e .env -- electron .",
    "electron:watch": "dotenv -e .env -- nodemon",
    "pack": "pnpm build:electron && node -e \"console.log('üì¶ Creating package...')\" && electron-builder --dir",
    "dist": "pnpm build:electron && node -e \"console.log('üöÄ Building installer...')\" && electron-builder",
    "dist:win": "pnpm build:electron && node -e \"console.log('üèóÔ∏è Building Windows installer...')\" && electron-builder --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "style-loader": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-reload": "2.0.0-alpha.1",
    "form-data": "^4.0.3",
    "lodash": "^4.17.21",
    "mwn": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.duckarchive.wiki-manager",
    "productName": "Wikisource Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
